// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// User Roles
enum UserRole {
  USER
  SUPER_ADMIN
  ADMIN_NEWS
  ADMIN_PARTY
  ADMIN_BOUTIQUE
  ADMIN_ASSOCIATION
  ADMIN_PHOTOGRAPHY
}

// User Authentication & Profile
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  name          String?
  image         String?
  phone         String?
  password      String? // For credentials login
  role          UserRole  @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  accounts            Account[]
  sessions            Session[]
  orders              Order[]
  cartItems           CartItem[]
  wishlistItems       WishlistItem[]
  inquiries           VenueInquiry[]
  donations           Donation[]
  newsBriefs          NewsBrief[]
  photographyBookings PhotographyBooking[]

  @@map("users")
}

// NextAuth Account Model
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

// NextAuth Session Model
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

// NextAuth Verification Token
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// Products (Boutique)
model Product {
  id             String   @id @default(cuid())
  name           String
  slug           String   @unique
  description    String
  price          Float
  comparePrice   Float? // Original price for discounts
  category       String
  isIshkOriginal Boolean  @default(false)
  images         Json // Array of image URLs (stored as JSON) - min 1, max 10
  videos         Json? // Array of video URLs (stored as JSON) - max 2
  inStock        Boolean  @default(true)
  stockCount     Int      @default(0)
  rating         Float    @default(0)
  reviewCount    Int      @default(0)
  badge          String? // "Bestseller", "New", etc.
  featured       Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  orderItems    OrderItem[]
  cartItems     CartItem[]
  wishlistItems WishlistItem[]

  @@map("products")
}

// Shopping Cart Items
model CartItem {
  id        String   @id @default(cuid())
  userId    String
  productId String
  quantity  Int      @default(1)
  size      String?
  color     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([userId, productId, size, color])
  @@map("cart_items")
}

// Orders
model Order {
  id              String      @id @default(cuid())
  userId          String
  orderNumber     String      @unique
  status          OrderStatus @default(PENDING)
  total           Float
  subtotal        Float
  shipping        Float
  tax             Float       @default(0)
  shippingAddress Json // Full address object
  billingAddress  Json
  paymentMethod   String?
  paymentIntentId String? // Stripe payment intent ID
  trackingNumber  String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  // Relations
  user       User        @relation(fields: [userId], references: [id])
  orderItems OrderItem[]

  @@map("orders")
}

enum OrderStatus {
  PENDING
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
  REFUNDED
}

// Order Items
model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  productId String
  quantity  Int
  price     Float // Price at time of order
  size      String?
  color     String?

  // Relations
  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id])

  @@map("order_items")
}

// Wishlist
model WishlistItem {
  id        String   @id @default(cuid())
  userId    String
  productId String
  createdAt DateTime @default(now())

  // Relations
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([userId, productId])
  @@map("wishlist_items")
}

// Venues (Party Service)
model Venue {
  id           String   @id @default(cuid())
  name         String
  slug         String   @unique
  description  String
  location     String
  city         String
  country      String
  address      String
  capacity     String // "30-50 guests"
  minCapacity  Int
  maxCapacity  Int
  price        Float // Starting price
  comparePrice Float? // Original price for discounts/promotions
  currency     String   @default("EUR")
  rating       Float    @default(0)
  reviewCount  Int      @default(0)
  images       Json // Array of image URLs (stored as JSON) - min 1, max 10
  videos       Json? // Array of video URLs (stored as JSON) - max 2
  features     Json // ["Garden", "Terrace", "Parking"] (stored as JSON)
  amenities    Json? // Detailed amenities object
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  inquiries VenueInquiry[]

  @@map("venues")
}

// Venue Inquiries (Lead Generation)
model VenueInquiry {
  id          String        @id @default(cuid())
  userId      String?
  venueId     String
  name        String
  email       String
  phone       String?
  eventDate   DateTime
  guestCount  Int
  message     String?
  status      InquiryStatus @default(NEW)
  respondedAt DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  // Relations
  user  User? @relation(fields: [userId], references: [id], onDelete: SetNull)
  venue Venue @relation(fields: [venueId], references: [id], onDelete: Cascade)

  @@map("venue_inquiries")
}

enum InquiryStatus {
  NEW
  CONTACTED
  QUOTED
  BOOKED
  DECLINED
}

// Campaigns (Association)
model Campaign {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String
  category    String // "Environment", "Community", "Education", "Wildlife"
  goal        Float
  raised      Float    @default(0)
  image       String?
  impact      String? // "ðŸŒ³ 7,500 trees planted"
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  donations Donation[]

  @@map("campaigns")
}

// Donations
model Donation {
  id              String   @id @default(cuid())
  userId          String?
  campaignId      String
  amount          Float
  currency        String   @default("EUR")
  paymentIntentId String? // Stripe payment intent ID
  anonymous       Boolean  @default(false)
  message         String?
  images          Json? // Array of image URLs (stored as JSON) - min 1, max 10
  videos          Json? // Array of video URLs (stored as JSON) - max 2
  createdAt       DateTime @default(now())

  // Relations
  user     User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  campaign Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)

  @@map("donations")
}

// News Briefs (optional - for saving user preferences)
model NewsBrief {
  id        String   @id @default(cuid())
  userId    String?
  title     String
  summary   String
  region    String
  topics    Json // Array of topics (stored as JSON)
  sourceUrl String?
  savedAt   DateTime @default(now())

  // Relations
  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@map("news_briefs")
}

// Photography Portfolio
model Photography {
  id          String   @id @default(cuid())
  title       String
  category    String // "Cultural", "Adventure", "Social Media", etc.
  image       String // Image URL or path
  description String?
  featured    Boolean  @default(false)
  order       Int      @default(0) // For custom ordering
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  albumPhotos AlbumPhoto[]

  @@map("photography")
}

// Photography Albums
model Album {
  id          String   @id @default(cuid())
  title       String
  description String?
  coverImage  String? // Cover image for the album
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  photos AlbumPhoto[]

  @@map("albums")
}

// Album Photos (junction table with additional fields)
model AlbumPhoto {
  id          String   @id @default(cuid())
  albumId     String
  photoId     String
  orientation String   @default("horizontal") // "horizontal" or "vertical"
  description String? // Description specific to this album photo
  order       Int      @default(0) // Order within the album
  createdAt   DateTime @default(now())

  // Relations
  album Album       @relation(fields: [albumId], references: [id], onDelete: Cascade)
  photo Photography @relation(fields: [photoId], references: [id], onDelete: Cascade)

  @@unique([albumId, photoId])
  @@map("album_photos")
}

// Photography Bookings/Inquiries
model PhotographyBooking {
  id            String        @id @default(cuid())
  userId        String?
  name          String
  email         String
  phone         String?
  preferredDate DateTime?
  serviceType   String // "portrait", "event", "commercial", "wedding", "other"
  message       String?
  images        Json? // Array of image URLs (stored as JSON) - min 1, max 10
  videos        Json? // Array of video URLs (stored as JSON) - max 2
  status        InquiryStatus @default(NEW)
  respondedAt   DateTime?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  // Relations
  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@map("photography_bookings")
}

// Photography Services
model PhotographyService {
  id           String   @id @default(cuid())
  name         String
  slug         String   @unique
  description  String
  duration     String // "2 hours", "4 hours", "Full day"
  price        Float?
  comparePrice Float? // Original price for discounts/promotions
  features     Json // Array of features (stored as JSON)
  image        String?
  featured     Boolean  @default(false)
  isActive     Boolean  @default(true)
  order        Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@map("photography_services")
}

// Party Services
model PartyService {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String
  price       Float // Starting price
  currency    String   @default("EUR")
  rating      Float    @default(0)
  reviewCount Int      @default(0)
  features    Json // Array of features (stored as JSON)
  image       String?
  featured    Boolean  @default(false)
  isActive    Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("party_services")
}

